.container-fluid
  .container(style='width: 27rem;height: 500px; align-content: center;margin-left: 10px;margin-top:60px; background-color: lightsteelblue;')
    // 
    .form-head(style='background-color: rgb(71, 71, 71); width: 27rem;height: 70px;margin-top: -14px; margin-left: -12px;padding-top: 10px; text-align: center;')
      h2.mb-4(style='color:lightseagreen;') Client Registration Form
    // the registration form starts here
    form.row.g-3(method='POST' action='#' enctype='multipart/form-data' style=' margin-top: 10px;')
      .row
        // client name
        .col-md-6
          label.form-label(for='inputEmail4') Client Name
          input.form-control(type='text' placeholder='employee name' name='client name')
        // type of client
        .col-md-5
          label.form-label(for='validationDefault04') Type of Client
          select#validationDefault04.form-select(required='')
            option Individual
            option Business
      // row 2 starts here
      .row
        .col-md-5
          label.form-label(for='validationDefault04') Type of Request
          select#validationDefault04.form-select(required='')
            option Subscription
            option One Time
        // service requested for
        .col-6(style='margin-left:24px;')
          label.form-label  Service requested for
          br
          .form-check-inline
            input#inlineCheckbox3.form-check-input(type='checkbox' value='' name='sewage/septic tank')
            label.form-check-label(for='flexCheckDefault')
              | Sewage/Septic tank
          .form-check
            input#inlineCheckbox3.form-check-input(type='checkbox' value='' name='gabbage collection')
            label.form-check-label(for='flexCheckChecked')
              | Gabbage Collection
      // 2nd row ends here
      // 3rd row starts here
      // trucks orders
      .row
        .col-4
          label.form-label(for='inputAddress') Trucks needed
          .col(style='width: 70px;')
            select#validationDefault04.form-select(required='')
              option 1
              option 2
              option 3
              option 4
        // arrival time
        .col-5(style='margin-left: -20px;')
          label.form-label(for='inputAddress ') Req. Arrival time
          .col(style='width: 90px;')
            select#validationDefault04.form-select(required='')
              option ...
              option 8:00-10:00am
              option 10:00-12:00am
              option 12:00-2:00pm
              option 2:00-4:00pm
        .col.2(style='margin-left: -40px;')
          label.form-label(for='inputAddress ') Location
          input#inputAddress .form-control(type='text ' style='width: 120px;' placeholder='e.g. Nsambya ')
      // 
      .row
        // NIN number
        .col-5
          label.form-label(for='inputAddress ') NIN number
          input#inputAddress .form-control(type='text ' placeholder='NIN ' name='nin ')
        // tel number
        .col-md-5
          label.form-label(for='inputAddress ') Tel Number
