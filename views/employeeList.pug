.container-fluid
  .card(style='width: 30rem;background-color:whitesmokes; align-content: center;margin-left: 10px;margin-top:60px; background-color: lightsteelblue;')
    .card-body(style='width: 30rem;')
      // 
      .form-head(style='background-color: rgb(71, 71, 71); width: 30rem;height: 70px;margin-top: -14px; margin-left: -16px;padding-top: 10px; text-align: center;')
        h2.mb-4(style='color:lightseagreen;') Employee Registration Form
      br
      // the registration form starts here
      form.row.g-3(method='POST' action='#' enctype='multipart/form-data' style='align-content:stretch;margin-left: 20px;')
        .col-md-6
          label.form-label(for='inputEmail4') Employee Name
          // will ask for some clarity about the aria-label="First Name" on the next line below
          input.form-control(type='text' placeholder='employee name' name='employee name')
        .col-md-4
          label.form-label(for='inputEmail4') User Name
          input.form-control(type='text' placeholder='e.g. STC-xxx' name='Username')
        .row
          .col-md-4
            label.form-label(for='inputEmail4') Truck No.
            input.form-control(type='text' placeholder='e.g GCT-xxx' name='Username')
          // role at the company
          .col-md-4
            label.form-label(for='validationDefault04') Role
            select#validationDefault04.form-select(required='')
              option Driver
              option Conductor
          // gender selection
          .col-md-4
            label.form-label(for='validationDefault04') Gender
            select#validationDefault04.form-select(required='')
              option Male
              option Female
        .row
          // age
          .col-md-4
            label.form-label(for='validationDefault04') Year Of Birth
            input#age.form-control(type='text' placeholder='age')
          // NIN Number
          .col-sm-5
            label.form-label(for='inputAddress') NIN number
            input#nationalID.form-control(type='text' placeholder='NIN')
        .row
          .col-5
            label.form-label(for='inputAddress2') Driver License
            input#inputAddress2.form-control(type='text' placeholder='license number' name='driverLicense')
          .col-md-7
            label.form-label(for='formFileMultiple') Upload documents
            input#formFileMultiple.form-control(type='file' name='documentupload' multiple='')
          // tel number
          .row
            .col-5
              label.form-label(for='inputAddress') Tel Number
              input#inputAddress.form-control(type='text' placeholder='+256-758-328' name='tel number')
            // Residence
            .col-5
              label.form-label(for='inputAddress') Residence
              input#inputAddress.form-control(type='text' placeholder='e.g. Nsambya' name='residence')
        .col-12
          button.btn.btn-primary(style='width: 390px;height: 40px;' type='submit')
            span(style='font-weight:4rem;') Register Employee
