  title Employee Registration
body 
  include employeeNav.pug
  // Button trigger modal
    button.btn.btn-primary(type='button' data-toggle='modal' data-target='#exampleModal')
    | Launch demo modal
  // Modal
  #editEmployee.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Employee Form
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          | ...
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
          button.btn.btn-primary(type='button') Save changes
  
  // registration info
  .container-fluid
    .container(style="width: 27rem;height:500px;background-color:whitesmokes; align-content: center;margin-left: 10px;margin-top:60px; background-color: lightsteelblue;")
      //  <div class="card-body" style="width: 27rem;"> 
      //   
      .form-head(style="background-color: rgb(71, 71, 71); width: 27rem;height: 70px;margin-top: -14px; margin-left: -12px;padding-top: 10px; text-align: center;")
        h2.mb-4(style="color:lightseagreen;") Employee Registration Form
      br
      //  the registration form starts here 
      form(method='POST',action='/employee', name='employeeRegForm',enctype="multipart/form-data")
        label(for='fname') First Name
        |         
        input#fname(type='text', name='firstname', placeholder=" First Name")
        |     
        br|         
        label(for='lname') last Name
        |         
        input#lname(type='text', name='lastname', placeholder="last Name")
        |     
        |
        br
        .row         
        label(for='gender') Gender
        |         
        select#gender(name='gender',placeholder="select gender")
          option(value='')
          |  
          |         
          option(value='Female') Female
          |         
          option(value='Male') Male
        label(for='age') Age

          input#age(type='number', name='age', placeholder="age")
        
        label(for='nin') NIN
          input#nin(type='string', name='nin', placeholder="nin")|         
        
        label(for='date') Date of birth|        
          input#date(type='date', name='date', placeholder='date of birth')
          |     
        label(for='telephoneNo') phone Number
          |         
          input#telephoneNo(type='string', name='telephoneNo')

        label(for='userName') UserName
          input#userName(type ='string', name = 'userName',placeholder='uaer Name') 

        label(for = 'password') Password
          input#password(type="password",name = 'password',placeholder='password')  

        label(for='image') Image
          input#image(type='file',name="images")

        .row
          .col-11
            br
            button.btn.btn-primary(style="width: 390px;height: 40px;", type="submit")
              span(style="font-weight:4rem;") Register Employee

  // The employee list table
