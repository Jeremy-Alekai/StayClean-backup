  // registration info
  .container-fluid
    .container(style="width: 27rem;height:500px;background-color:whitesmokes; align-content: center;margin-left: 10px;margin-top:60px; background-color: lightsteelblue;")
      //  <div class="card-body" style="width: 27rem;"> 
      //   
      .form-head(style="background-color: rgb(71, 71, 71); width: 27rem;height: 70px;margin-top: -14px; margin-left: -12px;padding-top: 10px; text-align: center;")
        h2.mb-4(style="color:lightseagreen;") Employee Registration Form
      br
      //  the registration form starts here 
      form.row.g-3(method="POST", action="/employeereg", style="align-content:stretch;margin-left: 1px;")
        //  row 1 
        .row
          //  client name 
          .col-md-6
            label.form-label(for="inputEmail4") Employee Name
            input.form-control(type="text", placeholder="employee name", name="employeename")
          .col-md-4
            label.form-label(for="inputEmail4") User Name
            input.form-control(type="text", placeholder="e.g. STC-xxx", name="username")
        //  row 2 
        .row
          .col-md-4
            label.form-label(for="inputEmail4") Truck No.
            input.form-control(type="text", placeholder="e.g GCT-xxx", name="truckno")
          //  role at the company 
          .col-md-4
            label.form-label(for="validationDefault04" ) Role
            select.form-select#validationDefault04(name="role" required)
              option( value="driver") Driver
              option( value="conductor") Conductor
          //  gender selection 
          .col-md-4
            label.form-label(for="validationDefault04") Gender
            select.form-select#validationDefault04(name="gender" required)
              option(value="male") Male
              option(value="female") Female
        //  row 3 
        .row
          //  age 
          .col-md-4
            label.form-label(for="validationDefault04") age
            input.form-control#age(type="text" placeholder="age" name="age")
          //  NIN Number 
          .col-sm-5
            label.form-label(for="inputAddress") NIN number
            input.form-control#nationalID(type="text" placeholder="NIN" name="nin")
        .row
          .col-5
            label.form-label(for="inputAddress2") Driver License
            input.form-control#inputAddress2(type="text" placeholder="license number" name="driverLicense")
          .col-md-7
            label.form-label Police letter
            input.form-control#formFileMultiple(type="file", name="policeletter")
        //  tel number 
        .row
          .col-5
            label.form-label(for="inputAddress") Tel Number
            input.form-control#inputAddress(type="text" placeholder="+256-758-328", name="telnumber")
          //  Residence 
          .col-5
            label.form-label(for="inputAddress") Residence
            input.form-control#inputAddress(type="text", placeholder="e.g. Nsambya", name="residence")
        .row
          .col-11
            br
            button.btn.btn-primary(style="width: 390px;height: 40px;", type="submit")
              span(style="font-weight:4rem;") Register Employee

